      -webkit-box-shadow: 0px 1px 5px #999;
    }
    
    .quick_link ul {
      margin: 0.5em;
      padding-left: 1em;
    }
    
    .quick_link li {
      margin: 0em;
    }
    
    .quick_link#feed_link {
      background: url('feed-icon.png') 10px 20px no-repeat;
      padding-left: 100px;
      width: 180px;
    }

    .quick_link #project_of_the_day {
      text-align: center;
    }
    
    .quick_link #project_of_the_day img {
      margin-top: 10px;
      margin-left: -10px;
    }
    
    a {
      color: #d20;
      font-weight: bold;
      text-decoration: none;
    }
    
    h1 {
      font-size: 115%;
      margin-top: 1.5em;
    }
    
    li {
      margin-bottom: 1em;
    }

    small {
      color: #666;
    }
    
    tt {
      color: #efe;
      text-shadow: 0px 0px 2px #373;
      background: #333;
      padding: 0.15em 0.35em;
      border-radius: 4px;
      line-height: 140%;
    }
    
    li.gem {
      list-style: none;
      margin-left: -1em;
    }
