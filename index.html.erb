      -moz-border-radius-topright: 0.5em;
      background: #eee;
      border-bottom: 1px solid #bbb;
      text-align: center;
      font-weight: bold;
      min-width: 150px;
      height: 20px;
      -moz-box-shadow: inset 0px 2px 3px white, inset 0px -1px 5px #bbb;
      -webkit-box-shadow: inset 0px 2px 3px white, inset 0px -1px 5px #bbb;
    }

    #tabs span {
      background: white;
      border-bottom: 1px solid white;
      -moz-box-shadow: 0px -1px 15px white;
      -webkit-box-shadow: 0px -1px 15px white;
    }
    
    .quick_link {
